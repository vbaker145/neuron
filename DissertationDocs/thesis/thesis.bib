journal = {Physica D: Nonlinear Phenomena},
keywords = {Neural network,Nonlocal,Pattern formation,Turing instability},
month = {jan},
number = {1},
pages = {75--93},
publisher = {Elsevier},
title = {{Turing instability and pattern formation in a two-population neuronal network model}},
volume = {225},
year = {2007}
}
